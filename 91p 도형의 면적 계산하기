#include <iostream>
#include <time.h>
using namespace std;
//사각형
double Rectangle() {
	cout << "사각형 선택 " << endl;
	int width,height;
	cout << "가로 :";
	cin >> width;
	cout << "세로 :";
	cin >> height;
	return width * height;
}
//원
double Circle() {
	cout << "원 선택 " << endl;
	int radius;
	cout << "반지름";
	cin >> radius;
	return 3.14 * radius;
}
//삼각형
double Triangle() {
	cout << "삼각형 선택 " << endl;
	int width, height;
	cout << "밑변 :";
	cin >> width;
	cout << "높이";
	cin >> height;
	return (1.0 / 2) * width * height;
}

int main()
{
	//도형의 면적 계산하기
	//도형을 선택하라고 요청 후 사용자의 입력을 기다리고 처리하기 위해 3개의 if-else 블록 사용
	//사욪아가 선택사항 입력하면 프로그램은 지정된 모양의 면적 계산한 그렇지 않으면 유효하지 않다고 알림

	//도형 선택 
	int choice;
	//면적
	double area;
	//찬반
	char option='Y';

	//도형 선택 입력
	while (option=='Y')
	{
		cout << "도형을 선택하세요 (1:사각형,2:원,3:삼각형) :";
		cin >> choice;
		if (choice == 1) {
			area = Rectangle();
		}
		else if (choice == 2) {
			area = Circle();
		}
		else if (choice == 3)
		{
			area = Triangle();
		}
		else {
			cout << "입력 값이 이상합니다 다시 입력하세요" << endl;
			continue;
		}
		//면적 출력
		cout << "면적 :" << area << endl;
		//다시 할건지 물어봄
		cout << "다시 하시겠습니까? (Y/N) =>";
		cin >> option;
	}
	



}
;
