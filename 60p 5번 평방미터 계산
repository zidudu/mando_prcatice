#include <iostream>
using namespace std;
int main()
{
	//평을 평방미터로 환산하는 프로그램
	//1평은 3.3058 
	//기호 상수 이용해 1평당 평방미터를 나타내기
	
	//1평
	const double one_pyeong = 3.3058;
	//면적 평
	double pyeong;
	//평 입력
	cout << "평 :";
	cin >> pyeong;
	//평 계산
	double pyeong_meter = pyeong * one_pyeong;
	//평방미터 출력
	cout << "평방미터 :" << pyeong_meter<<endl;

}

