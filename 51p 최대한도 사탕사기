#include <iostream>
using namespace std;
int main()
{
//최대한도의 사탕사기
//최대한 살 수있는 사탕의 개수와 나머지 돈 계산
	//현재 돈
	int money=1000;
	//캔디의 가격
	int candy_price=300;
	//캔디의 개수
	int candy_value=money/candy_price;
	cout << "현재 가지고 있는 돈 :" << money<<endl;
	cout << "캔디의 가격: " << candy_price<<endl;
	cout << "최대로 살 수 있는 캔디의 개수 : " <<  candy_value<< endl;
	cout << "캔디 구입 후 남은 돈 :" << money - (candy_price * candy_value)<<endl;

}

