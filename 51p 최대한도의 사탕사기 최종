#include <iostream>
using namespace std;
int main()
{
//최대한도의 사탕사기
//최대한 살 수있는 사탕의 개수와 나머지 돈 계산
	//현재 돈
	int money;
	//캔디의 가격
	int candy_price;
	//캔디의 개수
	int candy_value;
	cout << "현재 가지고 있는 돈 :";
	cin >> money;
	cout << "캔디의 가격 : ";
	cin >> candy_price;
	//캔디 개수 계산
	candy_value = money / candy_price;
	//캔디 구입후 남은 돈
	int last_money = money % candy_price;
	cout << "최대로 살 수 있는 캔디의 개수 : " <<  candy_value<< endl;
	cout << "캔디 구입 후 남은 돈 :" << last_money <<endl;

}

